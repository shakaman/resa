!!! 5
%html
  %head
    %meta{:charset => "utf-8"}/
    %title= "Resa"

    %link{:href => '/stylesheets/jquery-ui-1.8.16.custom.css', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => '/stylesheets/fullcalendar.css', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => '/stylesheets/jquery.gritter.css', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => '/stylesheets/jquery.ui.timepicker.css', :rel => 'stylesheet', :type => 'text/css'}

  %body
    %header
      %div Resa
      - if current_user.email
        %div= current_user.email
      %div= render_login_logout
      - if current_user.admin?
        %div
          %a{:href => "/users"} Users
          |
          %a{:href => "/signup"} Add user

    =yield

    %footer
      %p cody pony rox
      #legend

    %script{:src => 'javascripts/jquery.min.js', :type => 'text/javascript'}
    %script{:src => 'javascripts/jquery-ui-1.8.16.custom.min.js', :type => 'text/javascript'}
    %script{:src => 'javascripts/jquery.gritter.min.js', :type => 'text/javascript'}
    %script{:src => 'javascripts/jquery.ui.timepicker.js', :type => 'text/javascript'}
    %script{:src => 'javascripts/json2.js', :type => 'text/javascript'}
    %script{:src => 'javascripts/underscore-min.js', :type => 'text/javascript'}
    %script{:src => 'javascripts/backbone-min.js', :type => 'text/javascript'}
    %script{:src => 'javascripts/fullcalendar.js', :type => 'text/javascript'}
    %script{:src => 'javascripts/app.js', :type => 'text/javascript'}
